<idea-plugin>
  <id>henr5.importer</id>
  <name>Maven plugin project importer</name>
  <version>0.0.1</version>
  <vendor>Henri Viik</vendor>

  <description><![CDATA[
      Configures a Maven module as IntelliJ plugin project if the module has property
      <henri5.importer.type>PLUGIN_MODULE</henri5.importer.type> in pom.xml
    ]]></description>

  <change-notes><![CDATA[
      Implemented.<br>
    ]]>
  </change-notes>

  <idea-version since-build="173.0"/>

  <depends>com.intellij.modules.lang</depends>
  <depends>org.jetbrains.idea.maven</depends>
  <depends>DevKit</depends>

  <extensions defaultExtensionNs="org.jetbrains.idea.maven">
    <importer implementation="henri5.importer.PluginMavenImporter"/>
  </extensions>

</idea-plugin>